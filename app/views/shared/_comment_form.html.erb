<div class="form-group comment-form">
  <%= form_for @comment, remote: true, url: post_comments_path(@post) do |f| %>
    <%= f.text_area :body, required: true, rows: 5, class: "form-control" %>
    <%= f.hidden_field :commentable_id, :value => commentable_id %>
    <%= f.hidden_field :commentable_type, :value => commentable_type %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <br>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
<span class="add-comment">Add a comment</span>